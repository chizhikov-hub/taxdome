                                            <dashboard:OverviewCard
                                                Title="Total Revenue"
                                                Hint="+180.1% from last month"
                                                Value="$45,231.89">
                                                <dashboard:OverviewCard.Icon>
                                                    <TextBlock
                                                        Margin="0"
                                                        Classes="LucideIcon"
                                                        Foreground="{DynamicResource MutedColor}"
