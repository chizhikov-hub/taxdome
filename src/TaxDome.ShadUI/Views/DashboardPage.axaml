                                                    <StackPanel
                                                        Margin="24"
                                                        DockPanel.Dock="Top"
                                                        Spacing="8">
                                                        <TextBlock
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Text="Recent Sales" />
